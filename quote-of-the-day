###
###  Sample Usage: `. /path/to/.quote-of-the-day && quote-of-the-day`
###
###################################################################################

function quote-of-the-day() {
	INPUT="http://quotes.rest/qod.json?category=inspire"
	OUTPUT="/tmp/.quote_of_the_day"

	if [ ! -f $OUTPUT ]; then
		curl -s $INPUT > $OUTPUT	
	fi

	cat $OUTPUT | jq -r '.contents.quotes[0].quote'
	
	cd $WORK_DIR
	clear
	cat $OUTPUT | cowsay
	ls -alF

}
